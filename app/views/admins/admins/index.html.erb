<h4>管理ユーザー一覧</h4>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <td><%= link_to '編集',edit_admins_admin_path(admin.id) %></td>
        <% if admin.id != current_admin.id %>
        <td><%= link_to '削除',admins_admin_path(admin.id), method: :delete, data: { confirm: 'このユーザーを削除しますか？' } %></td>
        <% else %>
        <td><%= link_to '削除','#',:disabled => true%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '新規登録',new_admins_admin_path, class: "btn orrange-btn" %>
<br>
