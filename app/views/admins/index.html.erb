<p id="notice"><%= notice %></p>

<h4>管理ユーザー一覧</h4>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <td><%= link_to '詳細', admin_path(admin.id) %></td>
        <td><%= link_to '削除', admin_path(admin.id), method: :delete, data: { confirm: 'このユーザーを削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

