<!DOCTYPE html>
<html>
  <head>
    <title>hon to</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <div class="row">
          <div class="col-lg-12">
            <div class="logo">
                <%= image_tag 'logo.png',:width => "150" %>
            </div>
            <div class="user-info">
            </div>
          </div>
        </div>
      </header>
      <main>
        <div class="menu">
          <div class="row">
            <% if user_signed_in? %>
            <div class="col-lg-9">
              <%= link_to 'ã€€Sign out',destroy_user_session_path, method: :delete %>
            </div>
            <div class="col-lg-3">
              <%= form_for(@search_book,url: books_search_path, method: 'get') do |f| %>
                <%= f.text_field :search_word %>
                <%= f.submit 'getbook' %>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
        <%= yield %>
      </main>
      <footer>
        <%= render 'layouts/footer' %>
      </footer>
    </div>
  </body>
</html>
