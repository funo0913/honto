<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>

<%= form_for(@book,url: books_search_path) do |f| %>
  <%= f.text_field :search_word %>
  <%= f.submit 'getbook' %>
<% end %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>Status</th>
      <th>Title</th>
      <th>Innocent review</th>
      <th>Review</th>
      <th>Private</th>
      <th>Warning</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user.nickname %></td>
        <td><%= review.book.title %></td>
        <td><%= review.status.status_name %></td>
        <td><%= review.title %></td>
        <td><%= review.innocent_review %></td>
        <td><%= review.review %></td>
        <td><%= review.private %></td>
        <td><%= review.warning %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
