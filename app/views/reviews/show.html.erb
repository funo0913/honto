<div class="row">
  <div class="col-lg-12">
    <div class="review-title">
    </div>
    <div class="review-header">
      書籍情報
    </div>
    <div class="review-body">
      <h4><%= @review.book.title %></h4>
      <table class="book-detail-tbl">
        <tr>
          <td>著者</td>
          <td><%= @review.book.author %></td>
          <td>出版時期</td>
          <td><%= @review.book.publication.strftime("%Y/%m") if !@review.book.publication.nil? %></td>
        </tr>
        <tr>
          <td>出版社</td>
          <td><%= @review.book.publisher %></td>
          <td>ISBN</td>
          <td><%= @review.book.isbn %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<% if @review.user.id == current_user.id %>
  <div class="row">
    <div class="col-lg-12">
      <div class="review-title">
        <h4><%= @review.status.status_name %></h4>
      </div>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col-lg-12">
    <div class="review-title">
      <%= @review.title %>
    </div>
    <div class="review-header">
      ねたばれなし
    </div>
    <div class="review-body">
      <%= @review.innocent_review %>
    </div>
    <div class="review-header">
      感想
    </div>
    <div class="review-body">
      <%= @review.review %>
    </div>
  </div>
</div>
<div class="row">
  <div class="review-buttons">
    <% if @review.user.id == current_user.id %>
      <%= link_to '感想を編集する', edit_review_path(@review),class: 'btn' %>
    <% end %>
    <%= link_to '戻る', reviews_path ,class: 'btn' %>
  </div>
</div>
